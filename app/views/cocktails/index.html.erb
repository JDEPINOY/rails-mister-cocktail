<h1>Cocktails</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
   <li>
    <%= link_to cocktail.name, "cocktails/#{cocktail.id}" %>
    <%= link_to "", cocktail_path(cocktail), class: "far fa-trash-alt",
        method: :delete,
        data: { confirm: "Are you sure?" } %>
   </li>
  <% end %>
</ul>

<%= link_to 'Add Cocktail', new_cocktail_path %>


