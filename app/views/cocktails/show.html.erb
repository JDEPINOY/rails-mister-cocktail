
<div class="container">
 <div class="row headlist" id="title">
  <p><%= @cocktail.name %></p>
 </div>

  <div class="row image">
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>
  <div class="row" id="second_title">
    <p>Ingr√©dients</p>
  </div>
  <div class="row ingred_list">
    <ul>
      <% @doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= Ingredient.find(id=dose.ingredient_id).name %>
          <%= link_to "supp", dose_path(dose.id), class: "far fa-trash-alt",
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="row ingred_list">
    <%= link_to '+ Add Dose', new_cocktail_dose_path(@cocktail.id) %>
  </div>
  <div class="row ingred_list">
    <%= link_to "Back to list", cocktails_path %>
  </div>
</div>
